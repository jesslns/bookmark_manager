<style>
  body {
    font-family: "Arial";
    background-color: Turquoise ;
    color: SlateBlue;
    }
</style>

<body>

<h1> Your Bookmarks: </h1>
<ul>
  <% @bookmarks.each do |bookmark| %> <!-- a loop-->
    <li class="bookmark" id="bookmark-<%= bookmark.id %>"> <!-- assigned each list itme a class and a unique id that equals its database id-->
      <a href="<%= bookmark.url %>" target="_blank"> <!-- target="_blank" means open link in a new window -->
      <%= bookmark.title %>
      </a>
      <form action="/bookmarks/<%= bookmark.id %>" method="post">
      <input type='hidden' name='_method' value='DELETE'/>
      <input type="submit" value="Delete" />
      </form>
      <form action="/bookmarks/<%= bookmark.id %>/edit" method="get">
      <input type="submit" value="Edit" />
      </form>
    </li>
  <% end %>
</ul>
<br>
<form action="/bookmarks/new">
<input type="submit" value="Add New Bookmarks" />
</form>

</body>
</html>
